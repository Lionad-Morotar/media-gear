}
blockquote::after {
  content: '"';
} */

ol,
ul {
  padding-inline-start: 2.45em;
  padding-inline-end: 2.45em;
}

mark,
.highlighted {
  background: #7DFFB3;
}

code {
  background: rgba(0,0,0,.05);
  border-radius: 3px;
  margin: 0 3px;
  padding: 3px .3em;
  font-size: 20px;
  font-family: var(--font-code);
}
li code {
  font-size: 18px;
}


strong {
  color: var(--text-black--lighter);
}

pre {
  margin-top: 2em;
  padding: 20px;
  border-radius: 4px;
  background: rgba(0,0,0,.05);
  line-height: 1.75;
  font-family: var(--font-code);
  font-size: 16px;
  color: var(--text-black);
  white-space: pre-wrap;
  word-break: break-word;
}
pre + p {
  margin-top: 1.8em;
}

.first-letter {
  overflow-wrap: break-word;
  font-family: "Playfair Display", serif;
  font-size: 52px;
  font-weight: 500;
  line-height: 84px;
  display: block;
  position: relative;
  float: left;
  margin: 0px 12px 0 0px;
}

.subtitle {
  margin: .5em 0 1.2em 0;
  font-family: "Lato", sans-serif;
  color: var(--text-gray);
}

::selection {
  background-color: lavender
}
