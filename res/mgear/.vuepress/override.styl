:root {
  --text-black: rgba(0, 0, 0, 0.85);
  --text-black--lighter: rgba(0, 0, 0, 0.8);
  --text-gray: rgba(0, 0, 0, 0.54);
  --text-gray--lighter: rgba(0, 0, 0, .3);
  --font-code: "Fira", "Consolas", "Monaco", "Courier New", "Courier", "monospace";
}

* {
  margin: 0;
  padding: 0;
}

body {
  -webkit-font-smoothing: antialiased;
}

h1,
h2,
h3 {
  margin-top: 1.5em;
  margin-bottom: 0;
  text-align: left;
  color:  var(--text-black);
}
h1 {
  font-family: "Playfair Display", serif;
  font-size: 48px;
}
h2 {
  font-family: "Lato", sans-serif;
  font-size: 30px;
  font-weight: 700;
  line-height: 70px;
  letter-spacing: 1px;
}
h3 {
  margin-top: 1em;
  font-family: "Lato", sans-serif;
  font-size: 24px;
  font-weight: 700;
  line-height: 70px;
  letter-spacing: 1px;
}

p {
  margin-top: 2em;
  margin-bottom: 0;
  font-family: "Lora";
  font-size: 21px;
  color: var(--text-black);
  line-height: 2;
  text-rendering: optimizeLegibility;
  text-align: justify;
  font-style: normal;
  word-break: break-all;
}
p + p {
  margin-top: 1em;
}
h1 + p,
h2 + p,
h3 + p {
  margin-top: 0;
}

li {
  margin-top: 1em;
  font-family: "Lora";
  font-size: 21px;
  letter-spacing: 0.28px;
  line-height: 2;
}

a:visited,
a:active {
  color: var(--text-black);
  opacity: .8;
}
a {
  color: var(--text-black);
  text-decoration: underline;
  text-decoration-color: var(--text-gray--lighter);
  text-underline-position: under;
  user-select: none;
  transition: text-decoration-color .2s;
  cursor: pointer;
}
a:hover {
  text-decoration-color: var(--text-gray);
}

blockquote {
  margin: 1em 0;
  padding: .4em 0 .5em 2em;
  border-left: solid 4px var(--text-gray);
  font-size: 22px;
  color: var(--text-gray);
  letter-spacing: 1px;
word-break: break-all;
  text-align: justify;
}
blockquote > p:nth-child(1) {
  margin-top: 0;
}
blockquote + p {
  margin-top: .8em;
}
h1 + blockquote,
h2 + blockquote,
h3 + blockquote {
  margin-top: 2em;
}
